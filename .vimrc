set t_Co=256 " 256 Colors
syntax on

set backspace=indent,eol,start
set cmdheight=1
set helplang=en
set history=500
set hlsearch
set incsearch
set ruler
set shiftwidth=4
set tabstop=4
set termencoding=utf-8
set encoding=utf-8
set updatetime=500
set wildmenu
set relativenumber
set smartindent
set noswapfile
set foldlevel=99
set foldmethod=indent

set nocompatible
set showmatch
set ignorecase
set smartcase

" Set clipboard
set expandtab
set shiftround
set mouse=a

set colorcolumn=80

set fileformats=unix,mac,dos

